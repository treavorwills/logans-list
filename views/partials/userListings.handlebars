{{#each listings as |listing|}}
<div class="w-full md:w-1/3 xl:w-1/3 p-6 flex flex-col">
    <a href="../listing/{{id}}">
        <img class="hover:grow hover:shadow-lg" src={{image_url}}>
        <div class="pt-3 flex items-center justify-between">
            <p class="">{{name}}</p>
            <i data-id='{{id}}' class="deleteBtn fas fa-trash text-gray-500 hover:text-black"></i>
        </div>
        <p class="pt-1 text-gray-900">${{price}}</p>
    </a>
</div>
{{/each}}